    </header>

    <!-- hero section -->

    <section class="container-fluid" style="background-color:#D2E9FF; height: 50vh;">
        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="mx-auto mt-5 my-5 " style="width: 60%;">
                <p class="fs-3 fw-bold mb-1">A blogging website for</p>
                <p class="fs-1 fw-bolder">EVERYONE</p>
                
                    <a href="/login"> <button type="button" class="btn btn-primary rounded-pill">
                      <i class="fa-solid fa-circle-chevron-right"></i>
                          Get Started</button></a>
            </div>
            </div>
            <div class="col-6 d-none d-lg-block">
                <img src="/assets/images/Blogging-pana.svg" class="mx-auto" width="100%" height="250px" alt="blogging">
            </div>
        </div>
    </section>

    <!-- main section -->
    <section>
        <div class="mt-5 d-flex justify-content-between">
            <div class="mt-3"style="border-top: 1px solid #E8E9EC; width:420px">
            </div>
        
        <p class="text-center fs-4 fw-bold">Most recent posts</p>
        <div class="mt-3"style="border-top: 1px solid #E8E9EC; width: 420px"></div>
    </div>

    <div class="container mt-2" align="center">
        <div class="row gy-4">

            <% allPosts.forEach((post) => { %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card" style="width: 19rem;">
                        <img src="<%= post.img %>" class="card-img-top" alt="img">
                        <div class="card-body">
                          <h5 class="card-title"><%= post.title %></h5>
                          <p class="card-text"><%= post.content %></p>
                        </div>
                      </div>
                  </div>
            <% }) %>           
            
        </div>
      </div>
    </section>

    <!-- footer -->

    <div class="card-footer text-white bg-dark mt-3" style="text-align: center; padding: 20px;">
        &copy; WAAW Foundation - She hacks Africa Academy Blog 2022 by Chidinma Nwonye
      </div>

</body>
